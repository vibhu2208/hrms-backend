    initializeTransporter() {
      // Check if custom SMTP is configured
      if (process.env.SMTP_HOST && process.env.SMTP_USER && process.env.SMTP_PASS) {
        console.log('üìß Using custom SMTP configuration');
        this.transporter = nodemailer.createTransport({
          host: process.env.SMTP_HOST,
          port: parseInt(process.env.SMTP_PORT) || 587,
          secure: process.env.SMTP_SECURE === 'true', // true for 465, false for other ports
          auth: {
            user: process.env.SMTP_USER,
            pass: process.env.SMTP_PASS
          }
        });
      } else if (process.env.EMAIL_USER && process.env.EMAIL_APP_PASSWORD) {
        console.log('üìß Using Gmail SMTP configuration');
        this.transporter = nodemailer.createTransport({
          service: 'gmail',
          auth: {
            user: process.env.EMAIL_USER,
            pass: process.env.EMAIL_APP_PASSWORD
          }
        });
      } else {
        console.warn('‚ö†Ô∏è  No email configuration found. Email functionality will be disabled.');
      }
    }

