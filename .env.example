# Environment Variables for HRMS Backend
# Copy this file to .env and update the values

# Database
MONGODB_URI=mongodb://localhost:27017/hrms

# Server
NODE_ENV=development
PORT=5000

# JWT
JWT_SECRET=your_jwt_secret_here

# CORS
# Note: CORS is now configured in app.js to support multiple origins by default
# But you can still override with a single origin if needed
CORS_ORIGIN=https://hrms-frontend-blush.vercel.app

# AI Analysis Configuration - Using DeepSeek V3.1 (Free)
# Get your API key from https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-v3
DEEPSEEK_EMBEDDING_MODEL=deepseek-embedding
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MAX_TOKENS=4096
DEEPSEEK_TEMPERATURE=0.7

